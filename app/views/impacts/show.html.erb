<p id="notice"><%= notice %></p>

<section>
  <h1>
    <%= @impact.name %>
  </h1>
  <p>
    <strong>Pflanzzeitpunkt:</strong>
  </p>
  <p>
    <strong>Wasserbedarf:</strong>
    <%= @impact.water_requirement %>
  </p>
  <p>
    <strong>Zehrstärke:</strong>
    <%= @impact.fertilizer_requirement %>
  </p>
  <p>
    <strong>Standort:</strong>
    <%= @impact.location_requirement %>
  </p>
  <p>
    <strong>Abstand zur nächsten Pflanze:</strong>
    <%= @impact.dist_to_neighbor %> cm
  </p>
  <p>
    <strong>Wurzel:</strong>
    <%= @impact.root_type %>
  </p>
  <p>
    <h4>
      <% if @impact.seed_outdoors %>
        Aussaat Freiland
      <% else %> 
        Pflanzung Freiland
      <% end %>  
    </h4>
    <table class="impact-calendar">
      <thead>
        <tr>
          <th>Jan</th>
          <th>Feb</th>
          <th>Mär</th>
          <th>Apr</th>
          <th>Mai</th>
          <th>Jun</th>
          <th>Jul</th>
          <th>Aug</th>
          <th>Sep</th>
          <th>Okt</th>
          <th>Nov</th>
          <th>Dez</th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <td style="<%= @impact.put_outdoors_jan ? "background-color: DodgerBlue" : ""%>"></td>
          <td style="<%= @impact.put_outdoors_feb ? "background-color: DodgerBlue" : ""%>"></td>
          <td style="<%= @impact.put_outdoors_mar ? "background-color: DodgerBlue" : ""%>"></td>
          <td style="<%= @impact.put_outdoors_apr ? "background-color: DodgerBlue" : ""%>"></td>
          <td style="<%= @impact.put_outdoors_may ? "background-color: DodgerBlue" : ""%>"></td>
          <td style="<%= @impact.put_outdoors_jun ? "background-color: DodgerBlue" : ""%>"></td>
          <td style="<%= @impact.put_outdoors_jul ? "background-color: DodgerBlue" : ""%>"></td>
          <td style="<%= @impact.put_outdoors_aug ? "background-color: DodgerBlue" : ""%>"></td>
          <td style="<%= @impact.put_outdoors_sep ? "background-color: DodgerBlue" : ""%>"></td>
          <td style="<%= @impact.put_outdoors_oct ? "background-color: DodgerBlue" : ""%>"></td>
          <td style="<%= @impact.put_outdoors_nov ? "background-color: DodgerBlue" : ""%>"></td>
          <td style="<%= @impact.put_outdoors_dec ? "background-color: DodgerBlue" : ""%>"></td>
        </tr>  
      </tbody>
    </table>
  </p>
  <p>
    <% if @impact.seed_outdoors %>
      Diese Pflanze kann direkt im Freiland ausgesät werden.
    <% else %> 
      Diese Pflanze muss vorgezogen werden.
    <% end %>  
  </p>
  <% if !@impact.crop_time.nil? %>
      <p>
        Die Ernte kann ab ca.
        <%= @impact.crop_time %>
        Monaten nach Aussaat stattfinden.
      </p>
  <% end %>
</section>

<section>
  <h2>Gute Nachbarn</h2>
  <table class="table">
    <thead>
      <tr>
        <th>Name</th>
        <th>Begründung</th>
        <th>Freiland</th>
        <th>Wasserbedarf</th>
        <th>Standort</th>
        <th>Zehrstärke</th>
        <th>Abstand zur nächsten Pflanze</th>
        <th>Wurzel</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @impact.impacts.where(positive_impact: true).each do |impact| %>
        <tr>
          <td><%= impact.influencer.name %></td>
          <td><%= impact.reason%></td>
          <td><%=impact.influencer.seed_outdoors%></td>
          <td><%=impact.influencer.water_requirement%></td>
          <td><%=impact.influencer.location_requirement%></td>
          <td><%=impact.influencer.fertilizer_requirement%></td>
          <td><%=impact.influencer.dist_to_neighbor%></td>
          <td><%=impact.influencer.root_type%></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</section>

<section>
  <h2>Schlechte Nachbarn</h2>
  <table class="table">
    <thead>
      <tr>
        <th>Name</th>
        <th>Begründung</th>
      </tr>
    </thead>

    <tbody>
      <% @impact.impacts.where(positive_impact: false).each do |impact| %>
        <tr>
          <td><%= impact.influencer.name %></td>
          <td><%= impact.reason%></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</section>
  

