<p id="notice"><%= notice %></p>

<h1>Liste aller Pflanzen</h1>

<section>
  <table class="table">
    <tbody>
      <% @plants.each do |plant| %>
        <tr>
          <td class="col-md-6"><%= plant.name %></td>
          <td class="col-md-2"><%= link_to 'Details', plant %></td>
          <td class="col-md-2"><%= link_to 'Bearbeiten', edit_plant_path(plant) %></td>
          <td class="col-md-2"><%= link_to 'Löschen', plant, method: :delete, data: { confirm: 'Bist du sicher?' } %></td>
        </tr>
      <% end %>
      <tr>
        <td colspan="4">
          <%= link_to new_plant_path do %>
          <i class="fas fa-plus"></i> Pflanze hinzufügen
          <%- end %>
        </td>
      </tr>
    </tbody>
  </table>
</section>
