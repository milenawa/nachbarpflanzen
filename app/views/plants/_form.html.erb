<%= form_with(model: plant, local: true) do |form| %>
  <% if plant.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(plant.errors.count, "error") %> prohibited this plant from being saved:</h2>

      <ul>
      <% plant.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group row">
    <%= form.label :name, class: "col-sm-2 col-form-label" %>
    <div class="col-sm-10">
      <%= form.text_field :name, placeholder: "Name", class: "form-control"%>
    </div>
  </div>
  <div class="form-group row">
    <%= form.label :water_requirement, "Wasserbedarf", class: "col-sm-2 col-form-label" %>
    <div class="col-sm-10">
      <%= form.select :water_requirement, ['viel', 'mäßig', 'wenig'], {include_blank: 'unbekannt'}, class: "form-control"%>
    </div>
  </div>
  <div class="form-group row">
    <%= form.label :fertilizer_requirement, "Zehrstärke", class: "col-sm-2 col-form-label" %>
    <div class="col-sm-10">
      <%= form.select :fertilizer_requirement, ['stark', 'mittel', 'schwach'], {include_blank: 'unbekannt'}, class: "form-control"%>
    </div>
  </div>
  <div class="form-group row">
    <%= form.label :location_requirement, "Standort", class: "col-sm-2 col-form-label" %>
    <div class="col-sm-10">
      <%= form.select :location_requirement, ['sonnig', 'halbschattig', 'schattig'], {include_blank: 'unbekannt'}, class: "form-control"%>
    </div>
  </div>
  <div class="form-group row">
    <%= form.label :dist_to_neighbor, "Abstand zur nächsten Pflanze in cm", class: "col-sm-2 col-form-label" %>
    <div class="col-sm-10">
      <%= form.number_field :dist_to_neighbor, min: 0, class: "form-control"%>
    </div>
  </div>
  <div class="form-group row">
    <%= form.label :root_type, "Wurzeltyp", class: "col-sm-2 col-form-label" %>
    <div class="col-sm-10">
      <%= form.select :root_type, ['Flachwurzler', 'Tiefwurzler'], {include_blank: 'unbekannt'}, class: "form-control"%>
    </div>
  </div>
  <div class="form-group row">
    <%= form.label :seed_outdoors, "Kann die Pflanze direkt im Freiland ausgesät werden?", class: "col-sm-4 col-form-label" %>
    <div class="col-sm-8">
      <%= form.select :seed_outdoors, [['Ja', true], ['Nein', false]], {}, class: "form-control"%>
    </div>
  </div>
  <div class="form-group row">
    <%= form.label :seed_outdoors, "Wann kann die Pflanze im Freiland ausgesät/gepflanzt werden?", class: "col-sm-4 col-form-label" %>
    <div class="col-sm-8">
      <table class="plant-calendar">
        <thead>
          <tr>
            <th>Jan</th>
            <th>Feb</th>
            <th>Mär</th>
            <th>Apr</th>
            <th>Mai</th>
            <th>Jun</th>
            <th>Jul</th>
            <th>Aug</th>
            <th>Sep</th>
            <th>Okt</th>
            <th>Nov</th>
            <th>Dez</th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <td>
              <%= form.check_box :put_outdoors_jan %>
            </td>
            <td>
              <%= form.check_box :put_outdoors_feb %>
            </td>
            <td>
              <%= form.check_box :put_outdoors_mar %>
            </td>
            <td>
              <%= form.check_box :put_outdoors_apr %>
            </td>
            <td>
              <%= form.check_box :put_outdoors_may %>
            </td>
            <td>
              <%= form.check_box :put_outdoors_jun %>
            </td>
            <td>
              <%= form.check_box :put_outdoors_jul %>
            </td>
            <td>
              <%= form.check_box :put_outdoors_aug %>
            </td>
            <td>
              <%= form.check_box :put_outdoors_sep %>
            </td>
            <td>
              <%= form.check_box :put_outdoors_oct %>
            </td>
            <td>
              <%= form.check_box :put_outdoors_nov %>
            </td>
            <td>
              <%= form.check_box :put_outdoors_dec %>
            </td>
          </tr>  
        </tbody>
      </table>
    </div>
  </div>
  <div class="form-group row">
    <%= form.label :crop_time, "Nach wie vielen Monaten nach Aussaat kann geerntet werden?", class: "col-sm-4 col-form-label" %>
    <div class="col-sm-8">
      <%= form.number_field :crop_time, min: 0, max: 12, class: "form-control"%>
    </div>
  </div>

  <div class="actions">
    <%= form.submit "Speichern", class: "btn btn-primary" %>
  </div>
<% end %>
