<%= form_with(model: plant, local: true) do |form| %>
  <% if plant.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(plant.errors.count, "error") %> prohibited this plant from being saved:</h2>

      <ul>
      <% plant.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>
  <div class="field">
    <%= form.label :water_requirement,  "Wasserbedarf"%>
    <%= form.select :water_requirement, ['viel', 'mäßig', 'wenig'], {include_blank: 'unbekannt'}%>
  </div>
  <div class="field">
    <%= form.label :fertilizer_requirement,  "Zehrstärke"%>
    <%= form.select :fertilizer_requirement, ['stark', 'mittel', 'schwach'], {include_blank: 'unbekannt'}%>
  </div>
  <div class="field">
    <%= form.label :location_requirement,  "Standort"%>
    <%= form.select :location_requirement, ['sonnig', 'halbschattig', 'schattig'], {include_blank: 'unbekannt'}%>
  </div>
  <div class="field">
    <%= form.label :dist_to_neighbor, "Abstand zur nächsten Pflanze" %>
    <%= form.number_field :dist_to_neighbor, min: 0 %> cm
  </div>
  <div class="field">
    <%= form.label :root_type,  "Wurzel"%>
    <%= form.select :root_type, ['Flachwurzler', 'Tiefwurzler'], {include_blank: 'unbekannt'}%>
  </div>
  <div class="field">
    <%= form.label :seed_outdoors,  "Kann die Pflanze direkt im Freiland ausgesät werden?"%>
    <%= form.select :seed_outdoors, [['Ja', true], ['Nein', false]]%>
  </div>
  <div class="field">
    <label>Wann kann die Pflanze im Freiland ausgesät/gepflanzt werden?</label>
    <table class="plant-calendar">
        <thead>
          <tr>
            <th>Jan</th>
            <th>Feb</th>
            <th>Mär</th>
            <th>Apr</th>
            <th>Mai</th>
            <th>Jun</th>
            <th>Jul</th>
            <th>Aug</th>
            <th>Sep</th>
            <th>Okt</th>
            <th>Nov</th>
            <th>Dez</th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <td>
              <%= form.check_box :put_outdoors_jan %>
            </td>
            <td>
              <%= form.check_box :put_outdoors_feb %>
            </td>
            <td>
              <%= form.check_box :put_outdoors_mar %>
            </td>
            <td>
              <%= form.check_box :put_outdoors_apr %>
            </td>
            <td>
              <%= form.check_box :put_outdoors_may %>
            </td>
            <td>
              <%= form.check_box :put_outdoors_jun %>
            </td>
            <td>
              <%= form.check_box :put_outdoors_jul %>
            </td>
            <td>
              <%= form.check_box :put_outdoors_aug %>
            </td>
            <td>
              <%= form.check_box :put_outdoors_sep %>
            </td>
            <td>
              <%= form.check_box :put_outdoors_oct %>
            </td>
            <td>
              <%= form.check_box :put_outdoors_nov %>
            </td>
            <td>
              <%= form.check_box :put_outdoors_dec %>
            </td>
          </tr>  
        </tbody>
    </table>
  </div>
  <div class="field">
    <%= form.label :crop_time, "Nach wie vielen Monaten nach Aussaat kann geerntet werden?" %>
    Nach <%= form.number_field :crop_time, min: 0, max: 12 %> Monat(en)
  </div>

  <div class="actions">
    <%= form.submit "Speichern"%>
  </div>
<% end %>
